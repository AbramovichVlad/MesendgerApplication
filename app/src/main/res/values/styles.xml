<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsButons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/app_smal_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/reipple_effect</item>
        <item name="android:focusable">true</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="actonMenu" parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@color/grey_900</item>
        <item name="background">@color/white</item>
    </style>

    <style name="normalTetx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="smalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey_500</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/app_smal_margin</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="editRegistrText">
        <item name="android:textColorHint">@color/grey_800</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:padding">@dimen/appPading</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">phone</item>
    </style>
</resources>