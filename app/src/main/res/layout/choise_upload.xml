<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable = "true"
    app:behavior_peekHeight = "0dp"
    android:id="@+id/bottom_sheet_choise"
    android:background="@color/colorAccent"
    android:layout_height="@dimen/bottom_sheet_hight">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_attach_image"
        android:layout_width="@dimen/btn_bottom_sheet_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_attach_iamge"
        android:layout_margin="@dimen/app_margin"
        android:contentDescription="@string/btn_attach_image" />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_attach_image"
        android:id="@+id/btn_attach_file"
        android:layout_width="@dimen/btn_bottom_sheet_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_attach_file"
        android:layout_margin="@dimen/app_margin"
        android:contentDescription="@string/btn_attach_file" />

</androidx.constraintlayout.widget.ConstraintLayout>