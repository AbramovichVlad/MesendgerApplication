<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_smal_margin">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/block_user_message_file"
        android:layout_width="@dimen/chat_common_width"
        android:layout_height="@dimen/chat_btn_hight"
        android:background="@drawable/bg_user_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/chat_user_btn_download"
            android:layout_width="@dimen/chat_btn_width"
            android:layout_height="@dimen/chat_btn_hight"
            android:layout_margin="@dimen/app_smal_margin"
            android:contentDescription="@string/chat_user_btn_play_decripton"
            android:src="@drawable/ic_file_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:maxLines="2"
            android:id="@+id/chat_user_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_smal_margin"
            app:layout_constraintBottom_toTopOf="@id/chat_user_message_time_file"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chat_user_btn_download"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/chat_user_message_time_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_smal_margin"
            android:gravity="end"
            android:text="@string/message_item_time"
            android:textColor="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/chat_user_progress_bar"
            android:layout_width="@dimen/chat_btn_width"
            android:layout_height="@dimen/chat_btn_hight"
            android:layout_margin="@dimen/app_smal_margin"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/block_reciving_user_message_file"
        android:layout_width="@dimen/chat_common_width"
        android:layout_height="@dimen/chat_common_hight"
        android:background="@drawable/bg_reciving_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/chat_reciving_user_btn_download"
            android:layout_width="@dimen/chat_btn_width"
            android:layout_height="@dimen/chat_btn_hight"
            android:layout_margin="@dimen/app_smal_margin"
            android:contentDescription="@string/chat_reciving_user_btn_play_description"
            android:src="@drawable/ic_file_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:maxLines="2"
            android:id="@+id/chat_reciving_user_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_smal_margin"
            app:layout_constraintBottom_toTopOf="@id/chat_reciving_user_message_time_file"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chat_reciving_user_btn_download"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/chat_reciving_user_message_time_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_smal_margin"
            android:gravity="end"
            android:text="@string/message_item_time"
            android:textColor="@color/grey_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/chat_reciving_user_progress_bar"
            android:layout_width="@dimen/chat_btn_width"
            android:layout_height="@dimen/chat_btn_hight"
            android:layout_margin="@dimen/app_smal_margin"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>